<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <ImageButton
            android:id="@+id/noti_album_art"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:contentDescription="AlbumArtOfSong"
            android:src="@drawable/default_album_art" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="0.8">

        <TextView
            android:id="@+id/noti_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shape of You"
            android:layout_marginTop="10dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/noti_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noti_song_name"
            android:text="Ed Shareen"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/noti_song_artist"
            android:layout_marginTop="8dp">

           <ImageButton
               android:id="@+id/noti_previous"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_p_previous"
               android:layout_weight="1"
               android:tint="@android:color/black"
               android:backgroundTint="@android:color/transparent"/>
            <ImageButton
                android:id="@+id/noti_play_pause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_p_pause"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:tint="@android:color/black"
                android:backgroundTint="@android:color/transparent"/>
            <ImageButton
                android:id="@+id/noti_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_p_next"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:tint="@android:color/black"
                android:backgroundTint="@android:color/transparent"/>
        </LinearLayout>

    </RelativeLayout>





</LinearLayout>